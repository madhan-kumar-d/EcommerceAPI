generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement()) @db.UnsignedInt
  name      String
  email     String
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Tokens    Tokens[]
  role      ROLE       @default(USER)
  uniqueID  String     @unique @default(uuid())
  CartItem  CartItem[]
  Order     Order[]
}

model Tokens {
  id           BigInt   @unique @default(autoincrement()) @db.UnsignedBigInt
  userId       Int      @db.UnsignedInt
  token        String
  issuedAt     DateTime @default(now())
  expiresAt    DateTime
  isValid      Boolean  @default(true)
  ipAddress    String?  @db.VarChar(20)
  userAgent    String?  @db.Text
  userRelation User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isValid(sort: Asc)])
}

model Product {
  id          BigInt     @unique @default(autoincrement()) @db.UnsignedBigInt
  name        String
  description String     @db.LongText
  price       Decimal
  MRP         Decimal
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  CartItem    CartItem[]
}

model CartItem {
  id        BigInt   @unique @default(autoincrement()) @db.UnsignedBigInt
  userId    Int      @db.UnsignedInt
  user      User     @relation(fields: [userId], references: [id])
  productID BigInt   @db.UnsignedBigInt
  Product   Product  @relation(fields: [productID], references: [id])
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orderId   BigInt?  @db.UnsignedBigInt
  order     Order    @relation(fields: [id], references: [id])

  @@map("cart_items")
}

model Order {
  id            BigInt        @unique @default(autoincrement()) @db.UnsignedBigInt
  userId        Int           @db.UnsignedInt
  user          User          @relation(fields: [userId], references: [id])
  netAmount     Decimal
  totalQuantity Int
  address       String        @db.Text
  pinCode       String        @db.VarChar(6)
  orderStatus   ORDERSTATUS   @default(PENDIFNG)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  OrderStatus   OrderStatus[]
  CartItem      CartItem[]
}

model OrderStatus {
  id          BigInt      @unique @default(autoincrement()) @db.UnsignedBigInt
  orderID     BigInt      @db.UnsignedBigInt
  order       Order       @relation(fields: [orderID], references: [id])
  orderStatus ORDERSTATUS
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@map("order_status")
}

enum ROLE {
  ADMIN
  USER
}

enum ORDERSTATUS {
  PENDIFNG
  PAYMENT_PENDING
  PAYMENT_COMPLETED
  ACCETPED
  ORDER_IN_PROGRESS
  OUT_FOR_DELIVERY
  DELIVERED
  CANCELED
}
